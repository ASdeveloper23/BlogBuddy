<div class="container-fluid"style="padding-top:2cm;">
    <h1><b>Start Blogging â†“</b></h1>
    <br>
    <div class="container">
        <% if(message.length > 0){ %>
            <div class="alert alert-success">
                <%= message %>
            </div>
        <% } %>
        <form action="/userblog" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col">
                    <div class="first box">
                        <input id="font-size" style="background-color: rgb(161, 247, 154);"
                        type="number" value="16" min="1" max="100" onchange="f1(this)">
                    </div>
                    <div class="second box">
                        <button type="button" onclick="f2(this)">
                            <i class="fa-solid fa-bold"></i>
                        </button>
                        <button type="button" onclick="f3(this)">
                            <i class="fa-solid fa-italic"></i>
                        </button>
                        <button type="button" onclick="f4(this)">
                            <i class="fa-solid fa-underline"></i>
                        </button>
                    </div>
                    <div class="third box">
                        <button type="button" onclick="f5(this)">
                            <i class="fa-solid fa-align-left"></i>
                        </button>
                        <button type="button" onclick="f6(this)">
                            <i class="fa-solid fa-align-center"></i>
                        </button>
                        <button type="button" onclick="f7(this)">
                            <i class="fa-solid fa-align-right"></i>
                        </button>
                    </div>
                    <div class="fourth box">
                        <button type="button" onclick="f8(this)">aA</button>
                        <button type="button" onclick="f9()">
                            <i class="fa-solid fa-text-slash"></i>
                        </button>
                        <input type="color" onchange="f10(this)">
                    </div>
                    <div class="fifth box">
                        <button type="button" onclick="f11(this)">
                            <i class="fa-solid fa-file-circle-plus"></i>
                        </button>
                    </div>
                    <div class="sixth box" style="padding-top: 5px;">
                        <input type="file" name="image" class="form-control"  style="padding-bottom:37px;">
                    </div>
                </div><!-- col end-->
            </div><!-- row end-->
            <br>
            <div class="row">
                <div class="col">
                    <input type="text" id="titlename" name="title" placeholder="Your Title " style="height:1cm;width:inherit"></input>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <textarea id ="textdata" name="description" placeholder="Your text here "></textarea>
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-success" style="float: right;">Upload Blog</button>
        </form>
    </div><!--container end-->
</div><!--ontainer fluid end-->
<script src="/js/writeblog.js"></script>
<center><h1 style="padding-top: 3cm;"><u>Blogs</u></h1></center>
<br>
<br>
    <div class="container">
        <div class="row">
            <% d.forEach((item) => { %>
                <div class="col-md-4 mt-4">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= item.image.url %>" class="card-img-top displayimgblog" alt="...">
                        <div class="card-body">
                        <h5 class="card-title"><%= item.title.slice(0,25) %></h5>
                        <p class="card-text"><%= item.description.slice(0,50) %></p>
                        <p>Last Updated on ..<span><%= item.createdAt.toLocaleDateString() %></span></p>
                        <a href="/readmore/<%= item.id %>" class="btn btn-primary">Read More...</a>
                        </div>
                    </div>
                </div>
        <%  })%>
        </div>
    </div><!--container end-->
